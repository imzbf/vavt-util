{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["dev/*"],
      "~/*": ["packages/*"]
    }
  },
  "include": ["dev/**/*.ts", "packages/**/*.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
